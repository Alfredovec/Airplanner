<div class="panel panel-info">
    <div class="panel-heading">Flights</div>
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>From</th>
                <th>To</th>
                <th>Departure</th>
                <th>Arrival</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.FlightId</td>
                    <td>@flight.OutcomeCityName</td>
                    <td>@flight.DestinationCityName</td>
                    <td>@flight.DepartureTime.ToAirplaneTime()</td>
                    <td>@flight.ArrivalTime.ToAirplaneTime()</td>
                </tr>
            }
        </tbody>
    </table>
</div>

